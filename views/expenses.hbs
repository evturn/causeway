<div class="container exp">
  <div class="inner">

    <div class="transaction">
      {{#each users}}
        <div class="transaction__user" data-user="{{this.name.first}}">
          <div class="transaction__user-details">
            <img class="transaction__user-avatar" src="{{this.avatar}}">
            <div class="transaction__user-name">{{this.name.first}}</div>
          </div>
          <div class="transaction__user-select">
            <span class="fa fa-check"></span>
            <input class="transaction__user-checkbox" type="checkbox">
            <div class="transaction__user--checked"></div>
          </div>
          <div class="transaction__user-debt"></div>
        </div>
      {{/each}}
      <div class="transaction__info"></div>
      <input class="transaction__field-amount" name="transaction-amount" type="text" placeholder="Amount">
      <input class="transaction__field-description" name="transaction-description" type="text" placeholder="Description">
      <button class="transaction__submit">Ok</button>
    </div>
    <div class="records">
      {{#each transactions}}
        <div class="records__item{{#if this.complete}}--complete{{/if}}">
          <div class="records__item-payee">
            <div class="records__item-payee-user">{{this.payee}}</div>
            <div class="records__item-payee-amount">{{this.total}}</div>
          </div>
          <div class="records__item-debtors">
            {{#each debtors}}
            <div class="records__item-debtor-user">{{this.user}}</div>
            <div class="records__item-debtor-amount">{{this.debt}}</div>
            {{/each}}
          </div>
          <div class="records__item-description">{{this.description}}</div>
          <div class="records__item-total">{{this.total}}</div>
          <div class="records__item-date">{{this.timestamp}}</div>
        </div>
      {{/each}}
    </div>
  </div>
</div>