<div class="container mod-weather">
  <div class="inner">
    <div class="weather__item">
      <div class="weather__item-details">
        <div class="weather__item-temp">{{{kelvinToFarenheit user.climate.temp}}}</div>
        <div class="weather__item-description">{{user.climate.description}}</div>
      </div>
      <div class="weather__item-meta">
        <div class="weather__item-high">High {{{kelvinToFarenheit user.climate.high}}}</div>
        <div class="weather__item-low">Low {{{kelvinToFarenheit user.climate.low}}}</div>
        <div class="weather__item-sunrise">Sunrise {{digitalClock user.climate.sunrise}}</div>
        <div class="weather__item-sunset">Sunset {{digitalClock user.climate.sunset}}</div>
      </div>
    </div>
  </div>
</div>